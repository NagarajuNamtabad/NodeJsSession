<body>
   <%- include('../includes/navigation.ejs') %>

   <main>
    <form class="product-form" action="/admin/<% if (editing) { %>edit-product<% } else { %>add-product<% } %>" method="POST">
        <div class="form-control">
            <label for="title">Exam Name</label>
            <input type="text" name="examName" id="examName" value="<% if (editing) { %><%= product.examName %><% } %>">
        </div>
        <div class="form-control">
            <label for="title">Student Name</label>
            <input type="text" name="studentName" id="studentName" value="<% if (editing) { %><%= product.studentName %><% } %>">
        </div>
        <div class="form-control">
            <label for="title">English</label>
            <input type="text" name="english" id="english" value="<% if (editing) { %><%= product.english %><% } %>">
        </div>
        <div class="form-control">
            <label for="title">Maths</label>
            <input type="text" name="maths" id="maths" value="<% if (editing) { %><%= product.maths %><% } %>">
        </div>
        <div class="form-control">
            <label for="title">Physics</label>
            <input type="text" name="physics" id="physics" value="<% if (editing) { %><%= product.physics %><% } %>">
        </div>
        <div class="form-control">
            <label for="title">Chemistry</label>
            <input type="text" name="chemistry" id="chemistry" value="<% if (editing) { %><%= product.chemistry %><% } %>">
        </div>
        <% if (editing) { %>
            <input type="hidden" value="<%= product.id %>" name="productId">
        <% } %>

        <button class="btn" type="submit"><% if (editing) { %>Update Result<% } else { %>Add Result<% } %></button>
    </form>
</main>

