<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/product.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>

            <main>
                <% if (prods.length > 0) { %>
                    <div class="grid">
                        <% for (let result of prods) { %>
                            <article class="card product-item">
                                <header class="card__header">
                                    <h1 class="product__title">
                                       Exam Name : <%= result.examName %>
                                    </h1>
                                </header>
                                <div class="card__content">
                                    <h2 class="product__price">Student Name : <%= result.studentName %></h2>
                                    <h2 class="product__price">English : <%= result.english %></h2>
                                    <h2 class="product__price">Maths : <%= result.maths %></h2>
                                    <h2 class="product__price">Physics : <%= result.physics %></h2>
                                    <h2 class="product__price">Chemistry : <%= result.chemistry %></h2>
                                    <h2 class="product__price">Total Marks: <%= result.totalmarks %></h2>
                                    
                                </div>
                                <div class="card__actions">
                                    <a href="/admin/edit-product/<%= result.id %>?edit=true" class="btn">Edit</a>
                                    
                                        <input type="hidden" value="<%= result.id %>" name="resultId">
                                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                        <button class="btn" type="button" onclick="deleteResult(this)">Delete</button>
                        

                                </div>
                            </article>
                            <% } %>
                    </div>
                    <% } else { %>
                        <h1>No Products Found!</h1>
                        <% } %>
            </main>
            <%- include('../includes/end.ejs') %>
            <script src="/js/admin.js"></script>